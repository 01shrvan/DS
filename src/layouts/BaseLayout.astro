---
import BaseHead from "@/components/BaseHead.astro";
import Footer from "@/components/global/Footer.astro";
---

<html lang="en">
  <head>
    <BaseHead />
    <style>
      .geometric-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        pointer-events: none;
        overflow: hidden;
      }
      
      .geometric-bg::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background-image: 
          radial-gradient(circle at 25% 25%, rgba(0, 0, 0, 0.06) 2px, transparent 2px),
          radial-gradient(circle at 75% 75%, rgba(0, 0, 0, 0.04) 1px, transparent 1px);
        background-size: 60px 60px, 40px 40px;
        animation: float 20s ease-in-out infinite;
      }
      
      .geometric-bg::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
          linear-gradient(30deg, transparent 40%, rgba(0, 0, 0, 0.025) 40%, rgba(0, 0, 0, 0.025) 60%, transparent 60%),
          linear-gradient(-30deg, transparent 40%, rgba(0, 0, 0, 0.02) 40%, rgba(0, 0, 0, 0.02) 60%, transparent 60%);
        background-size: 120px 120px, 80px 80px;
        animation: drift 25s linear infinite;
      }
      
      .floating-shapes {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        pointer-events: none;
      }
      
      .shape {
        position: absolute;
        opacity: 0.05;
        animation: floatShapes 15s ease-in-out infinite;
      }
      
      .shape-1 {
        top: 10%;
        left: 5%;
        width: 100px;
        height: 100px;
        border: 1px solid currentColor;
        border-radius: 50%;
        animation-delay: 0s;
      }
      
      .shape-2 {
        top: 60%;
        left: 85%;
        width: 80px;
        height: 80px;
        border: 1px solid currentColor;
        transform: rotate(45deg);
        animation-delay: -5s;
      }
      
      .shape-3 {
        top: 30%;
        left: 80%;
        width: 0;
        height: 0;
        border-left: 40px solid transparent;
        border-right: 40px solid transparent;
        border-bottom: 60px solid rgba(0, 0, 0, 0.05);
        animation-delay: -10s;
      }
      
      .shape-4 {
        top: 80%;
        left: 15%;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.04);
        animation-delay: -3s;
      }
      
      .shape-5 {
        top: 15%;
        left: 60%;
        width: 120px;
        height: 2px;
        background: rgba(0, 0, 0, 0.05);
        transform: rotate(30deg);
        animation-delay: -8s;
      }
      
      .shape-6 {
        top: 45%;
        left: 10%;
        width: 90px;
        height: 90px;
        border: 1px solid rgba(0, 0, 0, 0.05);
        clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
        animation-delay: -12s;
      }
      
      @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(180deg); }
      }
      
      @keyframes drift {
        0% { transform: translateX(0px); }
        100% { transform: translateX(50px); }
      }
      
      @keyframes floatShapes {
        0%, 100% { 
          transform: translateY(0px) translateX(0px) rotate(0deg); 
          opacity: 0.05; 
        }
        25% { 
          transform: translateY(-15px) translateX(10px) rotate(90deg); 
          opacity: 0.07; 
        }
        50% { 
          transform: translateY(-10px) translateX(-5px) rotate(180deg); 
          opacity: 0.04; 
        }
        75% { 
          transform: translateY(5px) translateX(15px) rotate(270deg); 
          opacity: 0.06; 
        }
      }
      
      @media (max-width: 768px) {
        .shape {
          transform: scale(0.7);
        }
        
        .geometric-bg::before {
          background-size: 40px 40px, 25px 25px;
        }
        
        .geometric-bg::after {
          background-size: 80px 80px, 50px 50px;
        }
      }
      
      @media (prefers-reduced-motion: reduce) {
        .geometric-bg::before,
        .geometric-bg::after,
        .shape {
          animation: none;
        }
      }
    </style>
  </head>
  <body
    class="bg-base-50 flex flex-col min-h-svh mx-auto 2xl:max-w-screen-xl relative"
  >
    <div class="geometric-bg"></div>
    
    <div class="floating-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
      <div class="shape shape-4"></div>
      <div class="shape shape-5"></div>
      <div class="shape shape-6"></div>
    </div>
    
    <main class="grow"><slot /></main>
    <Footer />
  </body>
</html>