---
import FigmaLogo from "@/components/assets/FigmaLogo.astro";
import AstroLogo from "@/components/assets/AstroLogo.astro";
import StripeLogo from "@/components/assets/StripeLogo.astro";
import TailwindLogo from "@/components/assets/TailwindLogo.astro";
import OrchestraLogo from "@/components/assets/OrchestraLogo.astro";

const pricingTiers = [
  {
    title: "Full Suite Deployment",
    price: "Custom",
    note: "/enterprise",
    subnote: "Pricing on request",
    description:
      "Ideal for enterprises seeking end-to-end orchestration with the complete Luminera.ai platform.",
    highlight: "Includes:",
    features: [
      "LumiEngage → Customer data & engagement intelligence",
      "LumiOrchestrate → Automated workflows & decision execution",
      "LumiShield → Fraud detection & compliance protection",
      "LumiInsight → Predictive analytics & optimization",
      "LumiResilience → System health & observability",
    ],
  },
  {
    title: "Modular Solutions",
    price: "Flexible",
    note: "/per module",
    subnote: "Pricing on request",
    description:
      "Perfect for businesses that want to start small and scale. Deploy individual layers of Luminera.ai to solve immediate pain points.",
    highlight: "Choose from:",
    features: [
      "Customer engagement (LumiEngage)",
      "Workflow automation (LumiOrchestrate)",
      "Fraud & compliance (LumiShield)",
      "Business intelligence (LumiInsight)",
      "Resilience & observability (LumiResilience)",
    ],
  },
  {
    title: "Growth Consultation",
    price: "Free",
    note: "",
    subnote: "",
    description:
      "For businesses exploring AI adoption. Start with a consultation to map challenges, opportunities, and potential ROI.",
    highlight: "What you get:",
    features: [
      "AI readiness insights",
      "Key automation opportunities",
      "ROI projections & roadmap",
      "Tailored adoption strategy",
    ],
  },
];
---

<section class="scroll-mt-4" id="pricing">
  <div class="px-8 md:px-12 py-12 max-w-7xl mx-auto">
    <div
      class="grid grid-cols-1 gap-px md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4"
    >
      <!-- Intro card -->
      <section
        class="col-span-full lg:col-span-1 bg-white flex flex-col justify-between rounded-3xl h-full text-base-900 p-8"
      >
        <div>
          <div class="flex gap-2">
            <FigmaLogo class="h-4 text-base-900" />
            <AstroLogo class="h-4 text-base-900" />
            <TailwindLogo class="h-3 text-base-900" />
          </div>
          <p class="text-2xl tracking-tight font-medium text-base-900 mt-4">
            Tailored enterprise <span class="md:block">AI solutions</span>
          </p>
          <p class="text-xs text-base-500 mt-2">
            Flexible engagement models to align with your business scale, pace,
            and ROI goals.
          </p>
        </div>
        <div class="border-t border-base-200 flex flex-col pt-2 mt-2">
          <span class="text-xs text-base-600 font-normal">
            Luminera.ai ensures seamless deployment, secure integrations, and
            measurable growth for modern enterprises.
          </span>
          <div class="inline-flex items-center gap-2 mt-4 text-base-900">
            <OrchestraLogo class="h-4 text-base-900" />
            <span aria-hidden="true" class="text-base-900 pointer-events-none"
              >/</span
            >
            <StripeLogo class="h-4 text-base-900" />
          </div>
        </div>
      </section>

      <!-- Pricing tiers -->
      {
        pricingTiers.map((tier) => (
          <section class="bg-white flex flex-col justify-between rounded-3xl h-full text-base-900 p-8">
            <div>
              <div class="flex flex-col gap-2">
                <h3 class="text-lg text-base-900">{tier.title}</h3>
                <p class="text-xl font-medium text-base-900 mt-2">
                  {tier.price}
                  {tier.note && (
                    <span class="text-sm text-base-500">{tier.note}</span>
                  )}
                  <span class="text-base-900 block text-xs">
                    {tier.subnote}
                  </span>
                </p>
              </div>
              <p class="text-xs text-base-600 mt-4">{tier.description}</p>

              <div class="mt-6">
                <p class="text-xs uppercase text-base-900">{tier.highlight}</p>
                <ul
                  class="flex flex-col mt-2 text-sm text-base-600 gap-y-1 list-disc pl-4"
                  role="list"
                >
                  {tier.features.map((feature) => (
                    <li>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>

            <div class="mt-8">
              <button class="rounded-full px-4 border py-2 text-sm font-semibold transition-all flex items-center justify-between bg-white text-base-900 h-10 border-base-200 focus:ring-2 shadow-base-500/5 focus:ring-blue-950 focus:ring-offset-2 ring-offset-base-200 hover:bg-black hover:text-white duration-300 w-full">
                Get started <span>&rarr;</span>
              </button>
            </div>
          </section>
        ))
      }

      <!-- Good to know -->
      <section
        class="h-full p-8 flex flex-col col-span-full md:col-span-1 xl:col-span-2 justify-between order-last md:order-none bg-white rounded-3xl"
      >
        <p class="text-lg text-base-900 lg:text-xl">Why choose DreamSkrin</p>
        <div class="mt-4">
          <ul class="text-xs text-base-500 font-normal list-disc pl-4 space-y-1">
            <li><span class="text-base-900 font-medium">AI-first, data-driven</span> intelligence for decisive action</li>
            <li><span class="text-base-900 font-medium">Seamless integration</span> — go live in hours</li>
            <li><span class="text-base-900 font-medium">ROI-centric design</span> — measurable impact within weeks</li>
            <li><span class="text-base-900 font-medium">Resilience built in</span> — continuous performance & compliance</li>
            <li><span class="text-base-900 font-medium">Modular & unified</span> — scale at your own pace</li>
          </ul>
        </div>
      </section>

      <!-- Book a consultation -->
      <section
        class="h-full rounded-3xl justify-between col-span-full lg:col-span-1 xl:col-span-2 bg-white p-8"
      >
        <div class="flex flex-col justify-between h-full">
          <h3 class="text-lg text-base-900 lg:text-xl">Book a growth consultation</h3>
          <p class="text-xs text-base-500 mt-4 text-balance">
            Your brand has the vision. Luminera.ai has the engine to accelerate
            it. Book a free consultation to unlock your full growth potential.
          </p>

          <a
            href="#_"
            class="text-sm text-base-900 hover:text-blue-500 mt-4 font-medium"
          >
            Book now
          </a>

          <div class="border-t border-base-200 pt-4 mt-4">
            <p class="text-xs text-base-400">(IST) Time</p>
          </div>
        </div>
      </section>
    </div>
  </div>
</section>
